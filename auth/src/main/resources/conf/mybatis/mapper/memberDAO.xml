<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="memberDAO">

    <select id="GET_MEMBER_INFO" parameterType="string" resultType="member">
        SELECT * FROM MEMBER WHERE username = #{username}
    </select>

    <select id="GET_AUTH_INFO" parameterType="string" resultType="authority">
        SELECT authority_name AS authorityName FROM AUTHORITY WHERE username = #{username}
    </select>

</mapper>